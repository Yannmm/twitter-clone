<div class="container py-5" style="max-width: 540px">
  <h2>Set username</h2>
  <%= form_with model: current_user, local: false, url: username_path do |f| %>
    <%= f.label :username, class: 'form-label' %>
    <%= f.text_field :username, class: 'form-control' %>
    <%= f.label :display_name, class: 'form-label' %>
    <%= f.text_field :display_name, class: 'form-control' %>
    <div class="input-group mb-3 mt-3">
      <%= f.label :avatar, class: "input-group-text" %>
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
    <div class="mt-3">
      <%= f.submit 'Set User Info', class: "btn btn-twitter rounded-pill" %>
    </div>
  <% end %>
</div>
