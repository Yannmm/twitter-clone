<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>
  <div class="tweet d-flex py-4 px-3">
    <div class="flex-shrink-0">
      <%= image_tag tweet_presenter.avatar, size: "48", class: "rounded-circle" %>
    </div>
    <div class="flex-grow-1 ms-3">
      <p class="mb-0"><span class="fw-bold"><%= tweet_presenter.user.display_name %></span>@<span class="text-secondary"><%= tweet_presenter.user.username %> Â· <%= tweet_presenter.created_at %></span></p>
      <p><%= tweet_presenter.body %></p>
      <div class="d-flex justify-content-between">
        <%= link_to "#", class: "text-decoration-none text-black action-link views" do %>
          <%= image_tag 'view.png', width: 20 %>
          <span class="ms-1">Views</span>
        <% end %>
        <%= link_to "#", class: "text-decoration-none text-black action-link replies" do %>
          <%= image_tag 'reply.png', width: 20 %>
          <span class="ms-1">Replies</span>
        <% end %>
        <%= link_to "#", class: "text-decoration-none text-black action-link retweets" do %>
          <%= image_tag 'retweet.png', width: 20 %>
          <span class="ms-1">Retweets</span>
        <% end %>
        <%= link_to tweet_presenter.like_path, data: { turbo_method: tweet_presenter.like_method }, class: "text-decoration-none text-black action-link likes" do %>
          <%= image_tag tweet_presenter.like_image, width: 20 %>
          <span class="ms-1"><%= tweet_presenter.likes_count %></span>
        <% end %>
        <%= link_to "#", class: "text-decoration-none text-black action-link share" do %>
          <%= image_tag 'share.png', width: 20 %>
          <span class="ms-1">Bookmark</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>