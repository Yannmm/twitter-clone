<%= turbo_frame_tag 'profile_detail' do %>
  <p><%= user.bio&.present? ? user.bio : 'This guy is too lazy to write bio.' %></p>
  <div class="d-flex justify-content-start gap-3 mb-2">
    <div>
      <span style="position: relative; bottom:2px;" class="mb-0">
        <%= image_tag 'marker.png' , size: "16" %>
      </span>
      <span class="text-muted"><%= user.location.present? ? user.location : 'N/A' %></span>
    </div>
    <div>
      <span style="position: relative; bottom:2px;" class="mb-0">
        <%= image_tag 'megaphone.png' , size: "16" %>
      </span>
      <span class="text-muted">
        <% if user.website.present? %>
          <%= link_to user.website, user.website %>
        <% else %>
          <%= 'N/A' %>
        <% end %>
      </span>
    </div>
    <div>
      <span style="position: relative; bottom:2px;" class="mb-0">
        <%= image_tag 'calendar.png' , size: "16" %>
      </span>
      <span class="text-muted">Joined since <%= user.created_at.strftime('%b %-d, %Y') %></span>
    </div>
  </div>
  <div class="d-flex justify-content-start gap-3">
    <div><span><%= user.followees_count %></span> Following</div>
    <div><span><%= user.followers_count %></span> Followers</div>
  </div>
<% end %>